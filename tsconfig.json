{
  "compilerOptions": {
    "outDir": "build/dist",
    "typeRoots": [ "node_modules/@types/", "./typedef"],
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es7"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
        "app/*": [ "app/*" ],
        "lib/*": [ "lib/*" ],
        "store/*": [ "store/*" ],
        "constants/*": [ "constants/*" ]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/**/*.test.*"
  ]
}
